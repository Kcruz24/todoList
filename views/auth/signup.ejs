<%- layout("./layouts/registration") %>

<form action="/signup" method="POST">
    <div class="signupPage">
        <div class="field">
            <p class="control has-icons-left has-icons-right">

                <input class="input" type="text" id="username" name="username" placeholder="Username" autofocus
                    required>

                <span class="icon is-small is-left">
                    <em class="fas fa-user"></em>
                </span>
                <span class="icon is-small is-right">
                    <em class="fas fa-check"></em>
                </span>
            </p>
        </div>

        <div class="field">
            <p class="control has-icons-left has-icons-right">

                <input class="input" type="email" id="email" name="email" placeholder="Email" required>

                <span class="icon is-small is-left">
                    <em class="fas fa-envelope"></em>
                </span>
                <span class="icon is-small is-right">
                    <em class="fas fa-check"></em>
                </span>
            </p>
        </div>

        <div class="field">
            <p class="control has-icons-left">

                <input class="input" type="password" id="password" name="password" placeholder="Password" required>

                <span class="icon is-small is-left">
                    <em class="fas fa-lock"></em>
                </span>
            </p>
        </div>
        <div class="field">
            <p class="control buttons">
                <div class="columns is-mobile">

                    <div class="column">
                        <a href="/" class="button column is-fullwidth is-danger">Back</a>
                    </div>

                    <div class="column">
                        <button class="button column is-fullwidth is-link">
                            Login
                        </button>
                    </div>

                </div>
            </p>
        </div>
    </div>

</form>
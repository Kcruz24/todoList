<body>
    <section class="section">
        <div class="container column is-half">
            
            <h1 class="title">Edit To-Do:</h1>

            <div class="box has-background-warning">
                <form action="/todos/<%= todos._id %>?_method=PUT" method="POST">

                    <div class="block">
                        <label for="data"></label>
                        <input class="input is-primary" type="text" name="data" id="data" placholder="<%= todos.data %>"
                            value="<%= todos.data %>">
                    </div>

                    <div class="block">
                        <a class="button is-danger has-text-white" href="/todos">Cancel</a>

                        <button class="button has-background-success has-text-white">submit</button>
                    </div>
                </form>
            </div>
        </div>
    </section>
</body>


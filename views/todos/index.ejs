<%- include("partials/head") %>

<body>
    <section class="section">
        <div class="container">
            <h1 class="title">Inefficient To-Do List</h1>

            <div class="box has-background-primary">
                <% for (let todo of todos) { %>

                <div class="columns">
                    <div class="column is-11">
                        <a class="box column" href="/todos/<%= todo._id %> ">
                            <%= todo.data %>
                        </a>
                    </div>

                    <div class="column">
                        <a class="box column ml-2 is-link has-text-centered" href="/todos/<%  %> ">
                            <%= todo.checked %>
                        </a>
                    </div>
                </div>

                <% } %>
            </div>

            <div class="button is-info">
                <a class="has-text-white" href="/todos/new">New ToDo</a>
            </div>
        </div>
    </section>
</body>

